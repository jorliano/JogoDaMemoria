<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.jortec.jogodamemoria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TeleaInicialActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TelaJogoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_tela_jogo"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".PreferenciaActivity"
            android:configChanges="orientation"
            android:label="@string/Preferencias"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".TelaTeste"
            android:label="@string/title_activity_tela_teste"></activity>
    </application>

</manifest>
